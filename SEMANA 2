using System;


public class Circulo
{
    // Atributo privado que almacena el valor del radio (encapsulación)
    private double radio;

    // Constructor que inicializa el círculo con un radio específico
    public Circulo(double radio)
    {
        this.radio = radio;
    }
    public void SetRadio(double nuevoRadio)
    {
        if (nuevoRadio > 0)
        {
            this.radio = nuevoRadio;
        }
    }
    // Método para obtener el valor del radio
    public double GetRadio()
    {
        return this.radio;
    }
    // La fórmula es A = π * radio²
    public double CalcularArea()
    {
        return Math.PI * radio * radio;
    }
    // CalcularPerimetro devuelve el perímetro (circunferencia) del círculo.
    // La fórmula es P = 2 * π * radio
    public double CalcularPerimetro()
    {
        return 2 * Math.PI * radio;
    }
}
public class Rectangulo
{
    // Atributos privados que guardan el ancho y el alto del rectángulo
    private double ancho;
    private double alto;

    // Constructor que recibe alto y ancho para inicializar el rectángulo
    public Rectangulo(double ancho, double alto)
    {
        this.ancho = ancho;
        this.alto = alto;
    }
    // Métodos "set" para actualizar los valores encapsulados
    public void SetAncho(double nuevoAncho)
    {
        if (nuevoAncho > 0)
        {
            this.ancho = nuevoAncho;
        }
    }
    public void SetAlto(double nuevoAlto)
    {
        if (nuevoAlto > 0)
        {
            this.alto = nuevoAlto;
        }
    }
    public double GetAncho()
    {
        return this.ancho;
    }

    public double GetAlto()
    {
        return this.alto;
    }

    // CalcularArea devuelve el área del rectángulo.
    // Fórmula: A = ancho * alto
    public double CalcularArea()
    {
        return ancho * alto;
    }

    // Fórmula: P = 2 * (ancho + alto)
    public double CalcularPerimetro()
    {
        return 2 * (ancho + alto);
    }
}
// Ejemplo de uso en el método Main
public class Program
{
    public static void Main()
    {
        // Crear un círculo con radio 5
        Circulo c = new Circulo(5);
        Console.WriteLine("Área del círculo: " + c.CalcularArea());
        Console.WriteLine("Perímetro del círculo: " + c.CalcularPerimetro());

        // Crear un rectángulo de 4x6
        Rectangulo r = new Rectangulo(4, 6);
        Console.WriteLine("Área del rectángulo: " + r.CalcularArea());
        Console.WriteLine("Perímetro del rectángulo: " + r.CalcularPerimetro());
    }
}
